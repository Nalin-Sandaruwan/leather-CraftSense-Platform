{
  "info": {
    "name": "PG_WASTE Backend API",
    "_postman_id": "pg_waste_collection_001",
    "description": "Postman collection for PG_WASTE backend. Import into Postman and set environment variables before running.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000" },
    { "key": "access_token", "value": "" },
    { "key": "refresh_token", "value": "" },
    { "key": "user_id", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"P@ssw0rd\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.user) {",
                  "        pm.environment.set('access_token', jsonData.user.accessToken || '');",
                  "        pm.environment.set('refresh_token', jsonData.user.refreshToken || '');",
                  "        pm.environment.set('user_id', jsonData.user.userId || jsonData.user.id || '');",
                  "        console.log('Saved access_token and refresh_token to environment');",
                  "    }",
                  "}",
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New User\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"P@ssw0rd123\",\n  \"role\": \"USER\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/signup", "host": ["{{base_url}}"], "path": ["auth","signup"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.user) {",
                  "        pm.environment.set('access_token', jsonData.user.accessToken || '');",
                  "        pm.environment.set('refresh_token', jsonData.user.refreshToken || '');",
                  "        pm.environment.set('user_id', jsonData.user.userId || jsonData.user.id || '');",
                  "    }",
                  "}",
                  "pm.test('Signup returned 201 or 200', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{refresh_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/refresh", "host": ["{{base_url}}"], "path": ["auth","refresh"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    // Some servers return { accessToken, refreshToken } or { user: { ... } }",
                  "    if (jsonData.accessToken) {",
                  "        pm.environment.set('access_token', jsonData.accessToken);",
                  "    } else if (jsonData.user && jsonData.user.accessToken) {",
                  "        pm.environment.set('access_token', jsonData.user.accessToken);",
                  "    }",
                  "    if (jsonData.refreshToken) {",
                  "        pm.environment.set('refresh_token', jsonData.refreshToken);",
                  "    } else if (jsonData.user && jsonData.user.refreshToken) {",
                  "        pm.environment.set('refresh_token', jsonData.user.refreshToken);",
                  "    }",
                  "    console.log('Refreshed tokens and saved to environment');",
                  "}",
                  "pm.test('Refresh returned 200', function () { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": { "raw": "{{base_url}}/user", "host": ["{{base_url}}"], "path": ["user"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Get User By ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": { "raw": "{{base_url}}/user/{{user_id}}", "host": ["{{base_url}}"], "path": ["user","{{user_id}}"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
